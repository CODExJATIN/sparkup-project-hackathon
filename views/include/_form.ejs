 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Birthday" class="text-light">Birthday</label>
            <input type="number" name="birthday" value="<%= user.birthday%>" placeholder="DD-MM-YYYY">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" <%= user.gender == 'Male' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female"  <%= user.gender == 'Female' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="city" class="text-light">City</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="city" value="<%= user.city %>" placeholder="bangkok">
            </div>
            <div class="form-group">
                <label for="country" class="text-light">Country</label>
                <input type="hidden" name="id" value="<%= user._id %>">
                <input type="text" name="country" value="<%= user.country %>" placeholder="egypt">
                </div>
                <div class="form-group">
                    <label for="profession" class="text-light">Profession</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="profession" value="<%= user.profession %>" placeholder="influencer">
                    </div>
        
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>